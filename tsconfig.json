{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2017",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "rootDir": "app",
    "noEmitOnError": false,
    "noImplicitThis": true,
    "jsx": "react",
    "jsxFactory": "h"
  },
  "exclude": [
    "node_modules"
  ]
}